<%- include('partials/navbar') %>
<div class="container mt-5 pt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <a href="/admin/room/add" class="btn btn-primary">Add New Room</a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Room Number</th>
          <th>Type</th>
          <th>Status</th>
          <th>Price</th>
          <th>Floor</th>
          <th>Capacity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (rooms && rooms.length) { %>
          <% rooms.forEach(r => { %>
            <tr>
              <td><%= r.id %></td>
              <td><%= r.room_number %></td>
              <td><%= r.type %></td>
              <td>
                <span class="badge bg-<%= r.status === 'Available' ? 'success' : r.status === 'Occupied' ? 'danger' : 'warning' %>">
                  <%= r.status %>
                </span>
              </td>
              <td>$<%= r.price %></td>
              <td><%= r.floor %></td>
              <td><%= r.capacity %></td>
              <td>
                <a href="/admin/room/edit/<%= r.id %>" class="btn btn-sm btn-warning me-2">Edit</a>
                <form method="POST" action="/admin/room/delete/<%= r.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?')">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="8" class="text-center">No rooms found</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
