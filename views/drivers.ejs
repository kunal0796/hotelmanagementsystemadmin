<%- include('partials/navbar') %>
<div class="container mt-5 pt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= title %></h1>
    <a href="/admin/driver/add" class="btn btn-primary">Add New Driver</a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>License Number</th>
          <th>Phone</th>
          <th>Vehicle Type</th>
          <th>Available</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (drivers && drivers.length) { %>
          <% drivers.forEach(d => { %>
            <tr>
              <td><%= d.id %></td>
              <td><%= d.name %></td>
              <td><%= d.license_number %></td>
              <td><%= d.phone %></td>
              <td><%= d.vehicle_type || '-' %></td>
              <td>
                <span class="badge bg-<%= d.available ? 'success' : 'secondary' %>">
                  <%= d.available ? 'Available' : 'Unavailable' %>
                </span>
              </td>
              <td>
                <a href="/admin/driver/edit/<%= d.id %>" class="btn btn-sm btn-warning me-2">Edit</a>
                <form method="POST" action="/admin/driver/delete/<%= d.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this driver?')">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr><td colspan="7" class="text-center">No drivers found</td></tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
