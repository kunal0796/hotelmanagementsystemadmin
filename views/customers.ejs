<%- include('partials/navbar') %>
<div class="container mt-5 pt-5">
  <h1><%= title %></h1>
  <p class="text-muted">Customers placeholder page.</p>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <% if (topCustomers && topCustomers.length) { %>
        <% topCustomers.forEach(c => { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.name %></td>
            <td><%= c.email %></td>
            <td><%= c.phone %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="4" class="text-center">No customers found</td></tr>
      <% } %>
    </tbody>
  </table>
</div>
